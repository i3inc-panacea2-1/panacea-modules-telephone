<UserControl x:Class="Panacea.Modules.Telephone.Views.NavigationButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Panacea.Modules.Telephone.Views"
             xmlns:controls="clr-namespace:Panacea.Controls;assembly=Panacea.Controls"
             xmlns:multilinguality="clr-namespace:Panacea.Multilinguality;assembly=Panacea.Multilinguality"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Panel.ZIndex="9999"
             DockPanel.Dock="Left">
    <controls:ImageButton
        Command="{Binding ClickCommand}"
        TextVisibility="Visible"
        controls:Material.Icon="ring_volume"
        Text="{multilinguality:Translate 'Call nurse', 'Telephone'}">
    </controls:ImageButton>
</UserControl>
