<UserControl x:Class="Panacea.Modules.Telephone.Views.TileYourNumberIs"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Panacea.Modules.Telephone.Views"
             xmlns:multilinguality="clr-namespace:Panacea.Multilinguality;assembly=Panacea.Multilinguality"
             xmlns:mi="clr-namespace:Panacea.Controls;assembly=Panacea.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
        <TextBlock Foreground="White" TextAlignment="Center" FontSize="{DynamicResource FontSize-Small}" Text="{multilinguality:Translate 'Your number is', 'Telephone'}" />
        <TextBlock Foreground="White" TextAlignment="Center" FontSize="{DynamicResource FontSize-X-Large}" Text="{Binding Number}"/>
    </StackPanel>
</UserControl>
